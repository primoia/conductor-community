# Centralized Infrastructure Configuration for conductor-community

# MongoDB Configuration (Centralized Shared MongoDB)
MONGODB_URI=mongodb://${PRIMOIA_MONGO_USER}:${PRIMOIA_MONGO_PASSWORD}@primoia-shared-mongo:27017/conductor?authSource=admin
MONGO_URL=mongodb://${PRIMOIA_MONGO_USER}:${PRIMOIA_MONGO_PASSWORD}@primoia-shared-mongo:27017/conductor?authSource=admin
MONGO_INITDB_ROOT_USERNAME=${PRIMOIA_MONGO_USER}
MONGO_INITDB_ROOT_PASSWORD=${PRIMOIA_MONGO_PASSWORD}
MONGO_INITDB_DATABASE=conductor

# Service Configuration
ENVIRONMENT=production
NODE_ENV=production

# API Configuration
CONDUCTOR_API_PORT=8000
CONDUCTOR_GATEWAY_PORT=8080
CONDUCTOR_WEB_PORT=80

# Network Configuration
CONDUCTOR_API_URL=http://conductor-api:8000
